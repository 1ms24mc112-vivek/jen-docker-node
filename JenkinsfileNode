def app   // global variable

pipeline {
    agent any

    environment {
        IMAGE_NAME = "viveknshet112/node_webapp_auto"
    }

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/1ms24mc112-vivek/jen-docker-node.git'
            }
        }

        stage('Install Node Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    app = docker.build("${IMAGE_NAME}:latest")
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    docker.withRegistry(
                        'https://index.docker.io/v1/',
                        'dockerhub'
                    ) {
                        app.push("latest")
                    }
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
        success {
            echo "✅ Node.js Docker Image pushed successfully"
        }
        failure {
            echo "❌ Pipeline failed"
        }
    }
}
